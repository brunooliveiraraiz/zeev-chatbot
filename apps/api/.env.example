# API Configuration
PORT=3000
NODE_ENV=development
STAGE_DEFAULT=prod

# Authentication Mode: DEV | SIGNED_CONTEXT | JWT_SSO
AUTH_MODE=DEV

# DEV Mode (no validation)
# No additional config needed

# SIGNED_CONTEXT Mode
# IMPORTANTE: Trocar em produção por um secret seguro (use: openssl rand -hex 32)
CONTEXT_SIGNING_SECRET=your-signing-secret-change-in-production

# JWT_SSO Mode
# IMPORTANTE: Trocar em produção por um secret seguro (use: openssl rand -hex 32)
JWT_SECRET=your-jwt-secret-change-in-production
JWT_ISSUER=zeev-portal
JWT_AUDIENCE=zeev-chatbot

# Chat Session Token (internal JWT)
# IMPORTANTE: Trocar em produção por um secret seguro (use: openssl rand -hex 32)
CHAT_SESSION_SECRET=your-chat-session-secret-change-in-production
CHAT_SESSION_EXPIRES_IN=24h

# Zeev Integration
MOCK_MODE=false
ZEEV_BASE_URL=https://hmlraizeducacao.zeev.it/api
# IMPORTANTE: Obter token válido em: https://hmlraizeducacao.zeev.it
# Token deve começar com "Bearer " seguido do JWT
ZEEV_TOKEN=Bearer SEU_TOKEN_ZEEV_AQUI_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
ZEEV_ENDPOINT_CREATE_INSTANCE=/processes/{processId}/instances
ZEEV_PROCESS_ID=process-123
ZEEV_TIMEOUT_MS=10000

# Database (SQLite)
DATABASE_URL=file:./data/chatbot.db

# CORS
# CSV list of allowed origins (include Zeev portals + widget host)
# Adicione aqui todas as URLs que precisam acessar a API:
# - Localhost (desenvolvimento)
# - Portal Zeev HML/PROD
# - GitHub Pages (widget publicado)
CORS_ORIGINS=http://localhost:5173,http://localhost:5178,http://localhost:5179,http://localhost:5180,http://localhost:5181,http://localhost:5182,http://localhost:3000,https://hmlraizeducacao.zeev.it,https://brunooliveiraraiz.github.io

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Optional: LLM for classification (unused in v2 routing, safe to leave empty)
USE_LLM=false
LLM_API_URL=
LLM_API_KEY=

# AI Troubleshooting (Anthropic Claude)
# IMPORTANTE: Obter sua API Key em: https://console.anthropic.com/settings/keys
# A chave começa com "sk-ant-api03-"
ANTHROPIC_API_KEY=sk-ant-api03-SUBSTITUA_PELA_SUA_CHAVE_AQUI_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
AI_TROUBLESHOOTING_ENABLED=true

# Logging
LOG_LEVEL=info
