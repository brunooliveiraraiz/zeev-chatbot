// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id           String   @id @default(cuid())
  userId       String
  chatSessionToken String @unique
  userData     String   // JSON string
  state        String   @default("START")
  collectedData String? // JSON string
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  messages     Message[]

  @@index([userId])
  @@index([chatSessionToken])
}

model Message {
  id        String   @id @default(cuid())
  sessionId String
  role      String   // "user" | "bot"
  content   String
  metadata  String?  // JSON string
  createdAt DateTime @default(now())

  session   Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([sessionId])
}

// Tabela para rastrear resoluções de problemas (antes de escalar)
model ConversationResolution {
  id          String   @id @default(cuid())
  sessionId   String   @unique
  resolved    Boolean  @default(false)
  resolvedBy  String?  // "troubleshooting" | "ai_routing" | "escalated" | null
  category    String?  // Categoria da solicitação identificada
  requestId   String?  // ID do request do catálogo (se aplicável)
  resolvedAt  DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([resolved])
  @@index([resolvedAt])
  @@index([category])
}

// Tabela para avaliações dos usuários
model ConversationRating {
  id           String   @id @default(cuid())
  sessionId    String   @unique
  rating       Int?     // 1-5 estrelas (opcional)
  feedback     String?  // Comentário opcional do usuário
  helpful      Boolean? // true = útil, false = não útil (alternativa simples)
  createdAt    DateTime @default(now())

  @@index([rating])
  @@index([createdAt])
}

// Tabela para rastrear erros de direcionamento e problemas reportados
model ConversationError {
  id                  String   @id @default(cuid())
  sessionId           String
  errorType           String   // "wrong_form", "wrong_response", "user_complaint", "timeout"
  userMessage         String   // Mensagem que causou o erro
  botResponse         String   // Resposta incorreta do bot
  conversationHistory String   // JSON com histórico completo
  suggestedFormId     String?  // Formulário que o bot sugeriu (se aplicável)
  actualFormNeeded    String?  // Formulário correto (preenchido manualmente)
  correctionStatus    String   @default("pending") // "pending", "reviewed", "corrected", "ignored"
  correctedBy         String?  // Quem fez a correção
  notes               String?  // Observações sobre o erro e correção
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  @@index([sessionId])
  @@index([errorType])
  @@index([correctionStatus])
  @@index([createdAt])
}

// Tabela para persistir estado da conversação entre requests serverless
model ConversationState {
  id                    String   @id @default(cuid())
  sessionId             String   @unique
  attemptCount          Int      @default(0)
  history               String   // JSON array of messages
  hasSentLink           Boolean  @default(false)
  messagesSinceLinkSent Int      @default(0)
  lastActivity          DateTime @default(now())
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt

  @@index([sessionId])
  @@index([lastActivity])
}
